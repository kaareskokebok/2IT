        <table>
            <thead>
<th>Tittel</th>
<th>Utgivelsesår</th>
<th>Fornavn</th>
<th>Etternavn</th>
<th>Fødselsår</th>
            </thead>
            <tbody>
            <% for (let bok of boker) { %>
                <!-- Lag ny rad <tr> for hver bok, og hver opplysning går inn i et <td> element -->
                <% } %>
            </tbody>
            </table>
        
   <% } %>
</body>
</html>