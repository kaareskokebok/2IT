<%- include("partials/header.ejs") %>

<h2>Velg funksjon</h2>
<a href="/showtitles">Vis boktitler</a>
<a href="/showall">Vis all info</a>
<a href="/available">Vis tilgjengelig bøker</a>

<form action="/laanbok" method="post">
    <label for="inpBokID">Bok-ID</label>
    <input type="text" name="bokid"  id="inpBokID">
    <input type="submit" value="Lån bok">
</form>

<!-- Tilbakemelding etter lånt bok -->
<% if(locals.laanebok) { %>
<p><%= laanebok %> </p>
<% } %>

<!-- Vis tilgjengelige -->
<% if (locals.tilgjengeligeBoker) { %>
    <h3>Våre titler med info</h3>
    <ul>
    <% for (let bok of tilgjengeligeBoker) { %>
    <li><%= bok.tittel %>, <%= bok.forfatter %>, <%= bok.aar %></li>
    <% } %>
    </ul>
    <% } %>

<% if (locals.titles) { %>
<h3>Våre titler</h3>
<ul>
<% for (let title of titles) { %>
<li><%= title.tittel %> </li>
<% } %>
</ul>
<% } %>

<!-- showall -->
<% if (locals.allInfo) { %>
    <h3>Våre titler med info</h3>
    <ul>
    <% for (let bok of allInfo) { %>
    <li>id:<%= bok.id %>, <%= bok.tittel %>, <%= bok.forfatter %>, <%= bok.aar %>, <%= bok.laanestatus %> </li>
    <% } %>
    </ul>
    <% } %>



<%- include("partials/footer.ejs") %>